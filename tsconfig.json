{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "dist",
    "demo-spinner.mjs"
  ]
}